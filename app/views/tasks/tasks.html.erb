<div class="box">
    <h1>Tasker</h1>
    <br /><br /><br />
     <% if signed_in? %>

    <!-- Welcome current user -->
   <h3>Welcome, <%= current_user.name %>!</h3>
    <br /><br />

    <!-- Show current user's tasks -->
    <h3>Your Tasks:</h3>
    <br /><br />

        <!-- Render user's tasks -->
          <% Array(@tasks).each do |task| %>
                  <a id="task" href="/tasks/<%= task.id %>">
                    - <%= task.chore %> 
                    <br /><br />
                </a>
              </li>
          <% end %>
        <div class="btn-line">
            <a class="btn" href="/tasks/new">New Task</a>
            <a class="btn" href="/signout">Sign Out</a>
        </div>
    <% end %>
</div>